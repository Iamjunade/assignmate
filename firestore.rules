rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Users Collection ---
    // Anyone authenticated can read profiles (needed for Feed/Search)
    // Only the owner can create/update/delete their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated() && isOwner(userId);
    }

    // --- Chats Collection ---
    match /chats/{chatId} {
      // Create: Must be one of the participants
      allow create: if isAuthenticated() && (
        request.resource.data.poster_id == request.auth.uid || 
        request.resource.data.writer_id == request.auth.uid
      );
      
      // Read/Update: Must be one of the participants (checking existing data)
      allow read, update: if isAuthenticated() && (
        resource.data.poster_id == request.auth.uid || 
        resource.data.writer_id == request.auth.uid
      );

      // Messages Subcollection
      match /messages/{messageId} {
        // Helper to check parent chat participation via get()
        function isChatParticipant() {
          let chatData = get(/databases/$(database)/documents/chats/$(chatId)).data;
          return chatData.poster_id == request.auth.uid || chatData.writer_id == request.auth.uid;
        }

        allow read: if isAuthenticated() && isChatParticipant();
        allow create: if isAuthenticated() && isChatParticipant() && request.resource.data.sender_id == request.auth.uid;
      }
    }

    // --- Requests Collection (Connection Requests) ---
    match /requests/{requestId} {
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (request.auth.uid == resource.data.toId);
      allow read: if isAuthenticated() && (
        resource.data.fromId == request.auth.uid || 
        resource.data.toId == request.auth.uid
      );
    }

    // --- Connections Collection ---
    match /connections/{connectionId} {
      // Read: Requester or Receiver
      allow read: if isAuthenticated() && (
        resource.data.requester_id == request.auth.uid || 
        resource.data.receiver_id == request.auth.uid
      );

      // Create: Must be the requester
      allow create: if isAuthenticated() && request.resource.data.requester_id == request.auth.uid;

      // Update/Delete: Requester or Receiver (e.g., to accept or reject/cancel)
      allow update, delete: if isAuthenticated() && (
        resource.data.requester_id == request.auth.uid || 
        resource.data.receiver_id == request.auth.uid
      );
    }

    // --- Audit Logs ---
    match /audit_logs/{logId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if false; // Admin only (backend)
    }
  }
}
