rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Users Collection ---
    // Anyone authenticated can read profiles (needed for Feed/Search)
    // Only the owner can create/update/delete their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated() && isOwner(userId);
    }

    // --- Chats Collection ---
    match /chats/{chatId} {
      // Helper to check chat participation for the PARENT chat document
      function isChatParticipant() {
        // Check both the participants array AND legacy poster_id/writer_id fields
        return request.auth.uid in resource.data.participants ||
               resource.data.poster_id == request.auth.uid || 
               resource.data.writer_id == request.auth.uid;
      }
      
      // Helper for subcollections - fetches parent chat document
      function isParentChatParticipant() {
        let chat = get(/databases/$(database)/documents/chats/$(chatId)).data;
        return request.auth.uid in chat.participants ||
               chat.poster_id == request.auth.uid || 
               chat.writer_id == request.auth.uid;
      }

      // Create: Must be one of the participants
      allow create: if isAuthenticated() && (
        request.resource.data.poster_id == request.auth.uid || 
        request.resource.data.writer_id == request.auth.uid
      );
      
      // Read/Update: Must be one of the participants (checking existing data)
      allow read, update: if isAuthenticated() && isChatParticipant();

      // Messages Subcollection - MUST use isParentChatParticipant()
      match /messages/{messageId} {
        allow read: if isAuthenticated() && isParentChatParticipant();
        // Allow create if participant AND (is sender OR is system message)
        allow create: if isAuthenticated() && isParentChatParticipant() && (
          request.resource.data.sender_id == request.auth.uid ||
          request.resource.data.sender_id == 'system'
        );
        // Allow update for participants (for marking read, updating offer status)
        allow update: if isAuthenticated() && isParentChatParticipant();
      }

      // Files Subcollection (Metadata) - MUST use isParentChatParticipant()
      match /files/{fileId} {
        allow read: if isAuthenticated() && isParentChatParticipant();
        allow create: if isAuthenticated() && isParentChatParticipant();
      }
    }

    // --- Orders Collection (Projects/Assignments) ---
    match /orders/{orderId} {
      // Read: Student (hirer) or Writer involved in the order
      allow read: if isAuthenticated() && (
        resource.data.student_id == request.auth.uid ||
        resource.data.poster_id == request.auth.uid ||
        resource.data.writer_id == request.auth.uid
      );
      
      // Create: Must be student/poster or writer in the new order
      allow create: if isAuthenticated() && (
        request.resource.data.student_id == request.auth.uid ||
        request.resource.data.poster_id == request.auth.uid ||
        request.resource.data.writer_id == request.auth.uid
      );
      
      // Update: Only participants can update
      allow update: if isAuthenticated() && (
        resource.data.student_id == request.auth.uid ||
        resource.data.poster_id == request.auth.uid ||
        resource.data.writer_id == request.auth.uid
      );
    }

    // --- Requests Collection (Connection Requests) ---
    match /requests/{requestId} {
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (request.auth.uid == resource.data.toId);
      allow read: if isAuthenticated() && (
        resource.data.fromId == request.auth.uid || 
        resource.data.toId == request.auth.uid
      );
    }

    // --- Connections Collection ---
    // --- Connections Collection ---
    match /connections/{connectionId} {
      // Allow access if the authenticated user is in the participants array
      allow read, update, delete: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      
      // Create: Must be one of the participants in the new document
      allow create: if isAuthenticated() && (request.auth.uid in request.resource.data.participants);
    }

    // --- Notifications ---
    match /notifications/{notificationId} {
      // Read: Only the receiver can read their notifications
      allow read: if isAuthenticated() && resource.data.receiverId == request.auth.uid;
      
      // Create: Any authenticated user can send a notification (e.g. for chat/connection)
      allow create: if isAuthenticated();
      
      // Update: Receiver can mark as read
      allow update: if isAuthenticated() && resource.data.receiverId == request.auth.uid;
    }

    // --- FCM Tokens ---
    match /fcm_tokens/{userId} {
      // Users can only read/write their own token
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /community_posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isAuthenticated() && (
        resource.data.user_id == request.auth.uid || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'comments_count'])
      );
      allow delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }

    // --- Audit Logs ---
    match /audit_logs/{logId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if false; // Admin only (backend)
    }
  }
}

