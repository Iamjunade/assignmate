rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is a participant in the chat
    // This requires checking the Firestore chat document
    function isChatParticipant(chatId) {
      let chatData = firestore.get(/databases/(default)/documents/chats/$(chatId)).data;
      return request.auth.uid == chatData.poster_id || request.auth.uid == chatData.writer_id;
    }
    
    // Chat Files: Only chat participants can upload/read
    match /chat_files/{chatId}/{fileName} {
      // Allow upload if:
      // 1. User is authenticated
      // 2. User is a participant in the chat
      // 3. File size is under 10MB
      allow write: if isAuthenticated() 
                   && isChatParticipant(chatId)
                   && request.resource.size < 10 * 1024 * 1024;
      
      // Allow read if user is a participant in the chat
      allow read: if isAuthenticated() && isChatParticipant(chatId);
    }
    
    // Profile Images: Users can upload their own profile/portfolio images
    match /profiles/{userId}/{allPaths=**} {
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow read: if isAuthenticated();
    }
    
    // Default: Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
